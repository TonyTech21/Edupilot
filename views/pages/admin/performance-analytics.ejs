<%- include('../../partials/header') %>

<div class="analytics-dashboard">
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">
                <span class="title-icon">üìä</span>
                Performance Analytics
                <span class="title-glow"></span>
            </h1>
            <div class="session-info">
                <% if (activeSession) { %>
                    <div class="session-chip">
                        <i class="fas fa-calendar-alt"></i>
                        <%= activeSession.sessionName %> - <%= activeSession.currentTerm %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="header-bg"></div>
    </div>
    
    <!-- Analytics Overview Cards -->
    <div class="analytics-overview">
        <div class="overview-card card-primary">
            <div class="card-background"></div>
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-trophy"></i>
                </div>
                <div class="card-data">
                    <h3><%= overallTopStudents.length %></h3>
                    <p>Top Performers</p>
                </div>
            </div>
            <div class="card-glow"></div>
        </div>
        
        <div class="overview-card card-secondary">
            <div class="card-background"></div>
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-school"></i>
                </div>
                <div class="card-data">
                    <h3><%= classPerformance.length %></h3>
                    <p>Active Classes</p>
                </div>
            </div>
            <div class="card-glow"></div>
        </div>
        
        <div class="overview-card card-accent">
            <div class="card-background"></div>
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="card-data">
                    <h3><%= subjectPerformance.length %></h3>
                    <p>Subjects Analyzed</p>
                </div>
            </div>
            <div class="card-glow"></div>
        </div>
        
        <div class="overview-card card-success">
            <div class="card-background"></div>
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="card-data">
                    <h3><%= classPerformance.length > 0 ? Math.round(classPerformance.reduce((sum, cls) => sum + cls.averageScore, 0) / classPerformance.length) : 0 %>%</h3>
                    <p>School Average</p>
                </div>
            </div>
            <div class="card-glow"></div>
        </div>
    </div>
    
    <!-- Charts Container with Overflow -->
    <div class="charts-wrapper">
        <div class="charts-container">
            <!-- Term Performance Chart -->
            <div class="chart-card futuristic-card">
                <div class="card-header">
                    <div class="header-left">
                        <h3 class="chart-title">
                            <span class="title-icon">üéØ</span>
                            Top 10 Students by Term
                        </h3>
                        <p class="chart-subtitle">Interactive term-based performance analysis</p>
                    </div>
                    <div class="term-selector">
                        <button class="term-btn active" data-term="First Term">
                            <span>1st</span>
                            <div class="btn-glow"></div>
                        </button>
                        <button class="term-btn" data-term="Second Term">
                            <span>2nd</span>
                            <div class="btn-glow"></div>
                        </button>
                        <button class="term-btn" data-term="Third Term">
                            <span>3rd</span>
                            <div class="btn-glow"></div>
                        </button>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="termChart"></canvas>
                    <div class="chart-overlay"></div>
                </div>
                <div class="card-footer">
                    <div class="performance-indicator">
                        <span class="indicator-dot"></span>
                        <span>Real-time Performance Tracking</span>
                    </div>
                </div>
            </div>
            
            <!-- Overall Performance Chart -->
            <div class="chart-card futuristic-card">
                <div class="card-header">
                    <div class="header-left">
                        <h3 class="chart-title">
                            <span class="title-icon">üèÜ</span>
                            Session Top Performers
                        </h3>
                        <p class="chart-subtitle">Overall academic excellence ranking</p>
                    </div>
                    <div class="chart-stats">
                        <div class="stat-item">
                            <span class="stat-value"><%= overallTopStudents.length %></span>
                            <span class="stat-label">Students</span>
                        </div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="overallChart"></canvas>
                    <div class="chart-overlay"></div>
                </div>
                <div class="card-footer">
                    <div class="performance-indicator">
                        <span class="indicator-dot success"></span>
                        <span>Cross-Subject Analysis</span>
                    </div>
                </div>
            </div>
            
            <!-- Class Performance Chart -->
            <div class="chart-card futuristic-card">
                <div class="card-header">
                    <div class="header-left">
                        <h3 class="chart-title">
                            <span class="title-icon">üè´</span>
                            Class Performance Matrix
                        </h3>
                        <p class="chart-subtitle">Comparative class analytics</p>
                    </div>
                    <div class="chart-stats">
                        <div class="stat-item">
                            <span class="stat-value"><%= classPerformance.length %></span>
                            <span class="stat-label">Classes</span>
                        </div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="classChart"></canvas>
                    <div class="chart-overlay"></div>
                </div>
                <div class="card-footer">
                    <div class="performance-indicator">
                        <span class="indicator-dot warning"></span>
                        <span>Trend Analysis Active</span>
                    </div>
                </div>
            </div>
            
            <!-- Subject Performance Chart -->
            <div class="chart-card futuristic-card">
                <div class="card-header">
                    <div class="header-left">
                        <h3 class="chart-title">
                            <span class="title-icon">üìö</span>
                            Subject Performance Insights
                        </h3>
                        <p class="chart-subtitle">Multi-dimensional subject analysis</p>
                    </div>
                    <div class="chart-stats">
                        <div class="stat-item">
                            <span class="stat-value"><%= subjectPerformance.length %></span>
                            <span class="stat-label">Subjects</span>
                        </div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="subjectChart"></canvas>
                    <div class="chart-overlay"></div>
                </div>
                <div class="card-footer">
                    <div class="performance-indicator">
                        <span class="indicator-dot info"></span>
                        <span>Dual-Axis Visualization</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Performance Tables with Overflow -->
    <div class="tables-wrapper">
        <div class="tables-container">
            <!-- Top Students Table -->
            <div class="table-card futuristic-card">
                <div class="card-header">
                    <h3 class="table-title">
                        <span class="title-icon">üåü</span>
                        Hall of Excellence
                    </h3>
                    <div class="table-actions">
                        <button class="action-btn">
                            <i class="fas fa-download"></i>
                            Export
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="futuristic-table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <span>Rank</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Student</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Class</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Average Score</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Subjects</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (overallTopStudents.length > 0) { %>
                                <% overallTopStudents.forEach((student, index) => { %>
                                    <tr class="table-row">
                                        <td>
                                            <div class="rank-badge rank-<%= index + 1 %>">
                                                <span class="rank-number"><%= index + 1 %></span>
                                                <div class="rank-glow"></div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="student-info">
                                                <span class="student-name"><%= student.studentName %></span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="class-badge"><%= student.className %></span>
                                        </td>
                                        <td>
                                            <div class="score-display">
                                                <span class="score-value"><%= Math.round(student.averageScore * 100) / 100 %>%</span>
                                                <div class="score-bar">
                                                    <div class="score-fill" style="width: <%= student.averageScore %>%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="subject-count"><%= student.totalSubjects %></span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="no-data">
                                        <div class="no-data-content">
                                            <i class="fas fa-chart-line"></i>
                                            <span>No performance data available</span>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Class Performance Table -->
            <div class="table-card futuristic-card">
                <div class="card-header">
                    <h3 class="table-title">
                        <span class="title-icon">üè´</span>
                        Class Performance Matrix
                    </h3>
                    <div class="table-actions">
                        <button class="action-btn">
                            <i class="fas fa-filter"></i>
                            Filter
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="futuristic-table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <span>Class</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Average Score</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Students</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <span>Performance</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (classPerformance.length > 0) { %>
                                <% classPerformance.forEach(cls => { %>
                                    <tr class="table-row">
                                        <td>
                                            <span class="class-name"><%= cls._id %></span>
                                        </td>
                                        <td>
                                            <div class="score-display">
                                                <span class="score-value"><%= Math.round(cls.averageScore * 100) / 100 %>%</span>
                                                <div class="score-bar">
                                                    <div class="score-fill" style="width: <%= cls.averageScore %>%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="student-count"><%= cls.studentCount %></span>
                                        </td>
                                        <td>
                                            <% 
                                                let level = 'Poor';
                                                let levelClass = 'poor';
                                                if (cls.averageScore >= 80) { level = 'Excellent'; levelClass = 'excellent'; }
                                                else if (cls.averageScore >= 70) { level = 'Very Good'; levelClass = 'very-good'; }
                                                else if (cls.averageScore >= 60) { level = 'Good'; levelClass = 'good'; }
                                                else if (cls.averageScore >= 50) { level = 'Average'; levelClass = 'average'; }
                                            %>
                                            <span class="performance-badge <%= levelClass %>">
                                                <span class="badge-text"><%= level %></span>
                                                <div class="badge-glow"></div>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="no-data">
                                        <div class="no-data-content">
                                            <i class="fas fa-school"></i>
                                            <span>No class performance data available</span>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

